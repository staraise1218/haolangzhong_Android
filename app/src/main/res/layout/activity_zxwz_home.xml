<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/title_normal"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/title"
        android:scrollbars="none">
        <RelativeLayout
            android:id="@+id/content_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/buwei_tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病症选择"
                android:textSize="@dimen/hint_size"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/title_horizontal_margin"/>
            <LinearLayout
                android:id="@+id/body_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buwei_tv_hint"
                android:layout_marginLeft="@dimen/title_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/liaofa"/>
                <Spinner
                    android:id="@+id/buwei_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spingarr">
                </Spinner>
            </LinearLayout>

            <TextView
                android:id="@+id/zhengzhuang_tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="症状描述"
                android:textSize="@dimen/hint_size"
                android:layout_below="@id/body_ll"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/title_horizontal_margin"/>
            <EditText
                android:id="@+id/wenzhen_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="@string/zxwz_content"
                android:padding="5dp"
                android:gravity="top"
                android:textSize="@dimen/hint_size"
                android:layout_below="@id/zhengzhuang_tv_hint"
                android:background="@drawable/liaofa"
                android:layout_margin="@dimen/activity_vertical_margin"/>
            <LinearLayout
                android:id="@+id/zxwz_pic_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/wenzhen_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/wenzhe_pic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/hint_size"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/zxwz_hint"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_below="@id/zxwz_pic_ll"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@+id/pic_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/pic_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/pic_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

