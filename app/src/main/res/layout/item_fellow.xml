<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/zj_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/zj_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/zj_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李时珍"
            android:textSize="@dimen/hint_size"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/zj_img"
            android:layout_alignTop="@id/zj_img"
            android:layout_marginLeft="22dp"/>
        <TextView
            android:id="@+id/zj_level"
            android:layout_width="51dp"
            android:layout_height="16dp"
            android:text="等级"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/zj_name"
            android:layout_alignTop="@id/zj_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/login_btn"/>

        <TextView
            android:id="@+id/zj_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥200"
            android:textSize="@dimen/hint_size"
            android:textColor="@color/yellow_color"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/zj_name"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/zj_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="副主任医师 副教授"
            android:layout_below="@id/zj_name"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/zj_img"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="9dp"
            android:textSize="@dimen/hint_size"/>

        <TextView
            android:id="@+id/zj_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="副主任医师 副教授"
            android:layout_below="@id/zj_content"
            android:layout_toRightOf="@id/zj_img"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/zj_fellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shoucang"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/zj_fellow_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shoucang_1"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/zj_zx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咨询"
                android:textColor="@color/white"
                android:background="@drawable/zx_bg"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>