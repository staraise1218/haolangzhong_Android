<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title_rl"
        layout="@layout/title_normal"/>

    <LinearLayout
        android:id="@+id/name_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title_rl">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff6f6f6"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/name_ll"/>
    <LinearLayout
        android:id="@+id/phone_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/line3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
    android:id="@+id/line4"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#fff6f6f6"
    android:layout_marginLeft="15dp"
    android:layout_below="@id/phone_ll"/>

    <LinearLayout
        android:id="@+id/shenfen_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/line4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/shenfen_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff6f6f6"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/shenfen_ll"/>

    <LinearLayout
        android:id="@+id/address_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/line5"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff6f6f6"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/address_ll"/>
    <LinearLayout
        android:id="@+id/other_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/line6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证照片（正反面）"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/pic_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:src="@mipmap/wenzhe_pic"/>
            <ImageView
                android:id="@+id/pic_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff6f6f6"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/other_ll"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_btn"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="提交"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginTop="49dp"/>

</RelativeLayout>