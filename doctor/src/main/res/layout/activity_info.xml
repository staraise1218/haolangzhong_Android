<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title_rl"
        layout="@layout/title_normal" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="49dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submit"
        android:layout_below="@id/title_rl"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mine_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/user_img_rl"
                    android:layout_width="match_parent"
                    android:layout_height="91dp">

                    <TextView
                        android:id="@+id/mine_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="头像"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/next_bg"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/right" />

                    <ImageView
                        android:id="@+id/mine_img"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:layout_toLeftOf="@+id/next_bg"
                        android:src="@mipmap/ic_launcher" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_below="@id/mine_top"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="姓名"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/red" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/name_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/age_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="年龄"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/age_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:hint="请输入年龄"
                        android:gravity="end"
                        android:textSize="13sp"
                        android:inputType="number"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line_age"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/age_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/zc_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_age"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="职称"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/zc_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:hint="请输入职称"
                        android:gravity="end"
                        android:textSize="13sp"
                        android:inputType="text"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line_zc"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/zc_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/cy_age_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_zc"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="从业年限"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/cy_age_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:hint="请输入从业年限"
                        android:gravity="end"
                        android:textSize="13sp"
                        android:inputType="number"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line_cy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cy_age_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/phone_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_cy"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="手机号"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/phone_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="13313368368"
                        android:textSize="13sp"
                        android:textColor="@color/red" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/phone_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/shenfen_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line4"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="身份证号"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/shenfen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="136885198502122457"
                        android:textSize="13sp"
                        android:textColor="@color/red" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/shenfen_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/zhicheng_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="服务地区"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/zhicheng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="9dp"
                        android:layout_alignParentRight="true"
                        android:text="北京市"
                        android:textColor="#8B8B8B"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/zhicheng_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line6"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="详细地址"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#8B8B8B"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line6_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/address_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/shangmen_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line6_2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="是否提供上门调理服务"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />
                    <RadioGroup
                        android:id="@+id/radioGroup_sex_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/boy_id"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="是"
                            android:textSize="13sp" />

                        <RadioButton
                            android:id="@+id/girl_id"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="否"
                            android:checked="true"
                            android:textSize="13sp" />
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/come_cost_rl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/shangmen_ll">
                <TextView
                    android:id="@+id/line6_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#fffbf7f4" />
                <LinearLayout
                    android:id="@+id/come_cost_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line6_3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@+id/come_cost_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="调理费"
                            android:textColor="#ff3d3d3d"
                            android:textSize="15sp" />
                        <EditText
                            android:id="@+id/come_cost_et"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:hint="请输入单次调理费用"
                            android:gravity="end"
                            android:textSize="13sp"
                            android:inputType="number"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@id/come_cost_rl"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/cate_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line7"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="分类"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/chooose_cate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/cate_right_iv"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/cate_right_iv"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/right" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cate_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4" />

            <LinearLayout
                android:id="@+id/skill_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line8"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="技能"
                        android:textColor="#ff3d3d3d"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/chooose_skill_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/skill_right_iv"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/skill_right_iv"
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/right" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/skill_ll"
                android:layout_marginLeft="15dp"
                android:background="#fffbf7f4"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/skill_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line9"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/show_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身体部位"
                        android:textColor="#ff3d3d3d"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/go" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/show_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_hint"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="@dimen/title_horizontal_margin">

                    <TextView
                        android:id="@+id/show_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="活动" />

                    <TextView
                        android:id="@+id/show_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:text="培训" />

                    <TextView
                        android:id="@+id/show_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:text="视频" />

                    <TextView
                        android:id="@+id/show_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:text="论坛" />
                </LinearLayout>

                <TextView
                    android:id="@+id/skill_show_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_ll"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:text="技能分类"
                    android:textColor="#ff3d3d3d"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/show_ll_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/skill_show_hint"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/title_horizontal_margin">

                    <TextView
                        android:id="@+id/skill_show_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="活动" />

                    <TextView
                        android:id="@+id/skill_show_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:text="培训" />

                    <TextView
                        android:id="@+id/skill_show_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:text="视频" />

                    <TextView
                        android:id="@+id/skill_show_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/line_color"
                        android:gravity="center"
                        android:text="论坛" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/line11"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@id/skill_ll"
                android:layout_marginTop="10dp"
                android:background="#fffbf7f4" />

            <TextView
                android:id="@+id/rongyu_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line11"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:text="个人介绍"
                android:textColor="#ff3d3d3d"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/wenzhen_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/rongyu_hint"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@drawable/liaofa"
                android:gravity="top"
                android:hint="服务荣誉与介绍（限500字以内）"
                android:padding="5dp"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/zizhi_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资质证书上传"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:textColor="#ff3d3d3d"
                android:textSize="15sp"
                android:layout_below="@+id/wenzhen_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/zizhi_hint_tv"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pic_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@mipmap/wenzhe_pic" />

                <ImageView
                    android:id="@+id/pic_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/pic_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>